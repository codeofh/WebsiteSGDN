
@{
    ViewBag.Title = "ĐĂNG NHẬP";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <h3>Đăng nhập</h3>
        <div class="card mt-4">
            <div class="card-body px-4">
                <div class="p-2">
                    <form>

                        <div class="mb-3">
                            <label for="username" class="form-label">Địa chỉ email</label>
                            <input type="text" class="form-control" id="username" autocomplete="off">
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password-input">Mật khẩu</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input type="password" class="form-control pe-5 password-input"  autocomplete="off" id="password">
                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted shadow-none password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                            </div>
                        </div>
                        <div class="mb-3" id="notification">

                        </div>
                        <div class="mb-4">
                            <button class="btn btn-primary w-100 btn-load" id="btnLogin" type="button">Tiếp tục</button>
                        </div>
                        <div class="mb-1 text-center">
                            <a href="/accounts/reset-password">Tôi quên mật khẩu của tôi</a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->

        <div class="mt-4 text-center">
            <p class="mb-0">Bạn chưa có tài khoản Exness? <a href="/accounts/sign-up" class="text-primary"> Tạo tài khoản </a> </p>
        </div>

    </div>
</div>