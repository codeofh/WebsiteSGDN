
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdministratorManager/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    Danh sách gói đầu tư
                </h4>
                <div class="table-responsive">
                    <table class="table table-bordered" id="tblPakageList"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModalConfirmPakage" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật gói đầu tư <b class="text-danger pakageName"></b></h4>
            </div>
            <div class="modal-body">
                <input type="text" id="ipOrderId" hidden="hidden" />
                <div class="form-group mb-3">
                    <label>Tên gói đầu tư</label>
                    <input class="form-control" id="ipName" type="text" />
                </div>
                <div class="form-group mb-3">
                    <label>Lãi tối thiểu</label>
                    <div class="input-group">
                        <input class="form-control" id="ipRateMin" type="text" />
                        <span class="input-group-text">%</span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label>Lãi tối đa</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="ipRateMax" />
                        <span class="input-group-text">%</span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label>Lãi nhận</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="ipRateNow" />
                        <span class="input-group-text">%</span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label>Giá tiền</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="ipPrice" />
                        <span class="input-group-text">$</span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label>Loại đầu tư</label>
                    <select class="form-select" id="sltType">
                        <option value="1">Gói ngày</option>
                        <option value="30">Gói tháng</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label>Thưởng thêm</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="ipBonus" />
                        <span class="input-group-text">$</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" id="btnSubmiPakage"><i class="ti-save"></i> Duyệt</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal"><i class="ti-close"></i> Đóng lại</button>
            </div>
        </div>
    </div>
</div>

