
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdministratorManager/Views/Shared/_Layout.cshtml";
    var listAccount = (List<marketplace.AccountCustomer>)ViewBag.ListAccount;
    var role = PTEcommerce.Web.Models.SessionAdmin.GetUser().RoleId;
}
<input type="text" class="d-none" id="txtRoleId" value="@role" />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    Lịch sử rút tiền
                </h4>
                <div class="row">
                    <div class="col-lg-3 form-group mb-3">
                        <select class="form-select" id="idAccount">
                            <option value="0">Khách hàng</option>
                            @if (listAccount != null && listAccount.Count > 0)
                            {
                                foreach (var item in listAccount)
                                {
                                    <option value="@item.Id">@item.Email</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-2 form-group mb-3">
                        <select class="form-select" id="statusBR">
                            <option value="0">Trạng thái</option>
                            <option value="1">Đang xử lý</option>
                            <option value="2">Thành công</option>
                            <option value="4">Bị hủy</option>
                        </select>
                    </div>
                    <div class="col-lg-2 form-group mb-3">
                        <input type="date" class="form-control" id="startDate" value="@(new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1).ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-lg-2 form-group mb-3">
                        <input type="date" class="form-control" id="endDate" value="@(DateTime.Now.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-lg-1 form-group mb-3">
                        <button type="button" class="btn btn-primary" id="btnSearch"><i class="bx bx-search"></i></button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered" id="tblHistoryRecharge"></table>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModalConfirmbankRecharge" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Duyệt nạp tiền đơn #<b class="text-danger" id="orderId"></b></h4>
            </div>
            <div class="modal-body">
                <input type="text" id="ipOrderId" hidden="hidden" />
                <div class="form-group mb-3">
                    <label>Số tiền</label>
                    <input type="text" class="form-control" id="ipBankAmount" readonly />
                </div>
                <div class="form-group mb-3">
                    <label>Trạng thái</label>
                    <select class="form-control" id="sltStatus">
                        <option value="1">Đang xử lý</option>
                        <option value="2">Thành công</option>
                        <option value="4">Hủy</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" id="btnSubmitRecharge"><i class="ti-save"></i> Duyệt</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal"><i class="ti-close"></i> Đóng lại</button>
            </div>
        </div>
    </div>
</div>



